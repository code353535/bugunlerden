      <div class="w-full max-md:px-4 md:mt-0">
        <div class="relative grid grid-cols-1 md:grid-cols-3  md:h-[420px] gap-8 md:gap-[1px]">
          {heroPosts.map((post) => (
            <div class="relative overflow-hidden group col-span-1">
              <div>
                {post.imageUrl && (
